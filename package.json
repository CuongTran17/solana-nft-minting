{
  "name": "solana-nft-minting",
  "version": "1.0.0",
  "description": "NFT Minting on Solana",
  "scripts": {
    "build": "cargo build-sbf --manifest-path=programs/nft-minting/Cargo.toml --sbf-out-dir=target/deploy",
    "deploy": "solana program deploy target/deploy/nft_minting.so --program-id target/deploy/nft_minting-keypair.json --url devnet",
    "mint": "ANCHOR_PROVIDER_URL=https://api.devnet.solana.com ANCHOR_WALLET=~/.config/solana/id.json ts-node tests/mint-nft-simple.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "bip39": "^3.1.0",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.3.5"
  }
}
